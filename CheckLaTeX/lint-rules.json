{
  "QuotationMarks": {
    "PreferredOpen": "«",
    "PreferredClose": "»",
    "Forbidden": ["\"", "'", "`", "''", "``"]
  },
  "Hyphen": {
    "WrongSymbol": "-",
    "Replacement": "—"
  },
  "Bibliography": {
    "CheckUnusedSources": true,
    "CheckMissingCitations": true,
    "BibFilePath": "Bib.bib"
  },
  "LabelsReferences": {
    "CheckDuplicateLabels": true,
    "CheckUnusedLabels": true,
    "CheckMissingReferences": true,
    "RequiredLabelEnvironments": ["figure", "table", "equation", "lstlisting"]
  },
  "MarginsAndSpacing": {
    "CheckMargins": true,
    "CheckLineSpacing": true,
    "CheckFonts": true,
    "PreferGeometryPackage": true,
    "PreferSetspacePackage": true,
    "CheckSingleDefinition": true,
    "AllowedMargins": ["2.5cm", "25mm", "1in"],
    "RequiredLineSpacing": 1.5,
    "ForbiddenMarginCommands": ["a4wide", "fullpage"],
    "WarnAboutDirectParameterModification": true,
    "AllowedFontPackages": ["times", "mathptmx", "newtxtext", "newtxmath"],
    "PreferredFontPackage": "times",
    "RequiredFontSize": "12pt",
    "AllowedFontSizes": ["10pt", "11pt", "12pt"],
    "ForbiddenFontPackages": ["comic", "arev"],
    "CheckFontConsistency": true,
    "WarnAboutDirectFontCommands": true
  },
  "LineBreak": {
    "CheckSingleNewlines": true,
    "PreferredLineBreak": "\\\\",
    "SingleNewlineMessage": "Одиночный \\n не создает перенос строки в LaTeX. Используйте \\\\\\\\ или \\\\newline для принудительного переноса"
  }
}
